<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <ImageButton
        android:id="@+id/returnButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/back_arrow"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:padding="16dp"
        android:contentDescription="Return"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Scan Map Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/scanMapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/placeholder_qr"
        android:contentDescription="Scan Map QR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />


    <!-- "Share Map" Label (Commented Out) -->
    <TextView
        android:id="@+id/shareLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Map"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/imgQr"
        android:layout_marginBottom="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- QR Code Image (Commented Out) -->
    <ImageView
        android:id="@+id/imgQr"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/placeholder_qr"
        android:contentDescription="QR Code"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
