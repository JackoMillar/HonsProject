<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <ImageButton
        android:id="@+id/returnButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/back_arrow"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:padding="16dp"
        android:contentDescription="@string/QRcontentString"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Scan Map Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/scanMapButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"
        android:text="@string/scan_shared_map"
        app:icon="@drawable/placeholder_qr"
        app:iconGravity="textStart"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/returnButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="VisualLintButtonSize" />

    <!-- Clear Cache Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/clearCacheButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="24dp"
        android:text="@string/clear_cache"
        app:cornerRadius="16dp"
        app:icon="@drawable/placeholder_qr"
        app:iconGravity="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/returnButton"
        tools:ignore="VisualLintButtonSize" />

    <!-- "Share Map" Label -->
    <TextView
        android:id="@+id/shareLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_map"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/imgQr"
        android:layout_marginBottom="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- QR Code Image (Commented Out) -->
    <ImageView
        android:id="@+id/imgQr"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/placeholder_qr"
        android:contentDescription="@string/qr_code"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
